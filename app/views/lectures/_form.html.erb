<%= form_with(model: lecture, local: true) do |form| %>
  <% if lecture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

      <ul>
      <% lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <% if lecture.ended? %>
      <%= form.text_field :name, :readonly => true %>
    <% else %>
      <%= form.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :description%>
    <% if lecture.ended? %>
      <%= form.text_field :description, :readonly => true %>
    <% else %>
      <%= form.text_field :description %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :enrollment_key %>
    <% if lecture.ended? %>
      <%= form.text_field :enrollment_key, :readonly => true %>
    <% else %>
      <%= form.text_field :enrollment_key %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label "Enable Questions"%>
    <% if lecture.ended? %>
      <%= form.check_box :questions_enabled, :disabled => true %>
    <% else %>
      <%= form.check_box :questions_enabled %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label "Enable Polls"%>
    <% if lecture.ended? %>
    <%= form.check_box :polls_enabled, :disabled => true %>
    <% else %>
      <%= form.check_box :polls_enabled %>
    <% end %>
  </div>


  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
