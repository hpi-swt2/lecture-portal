<h1>Current Lectures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %></td>
        <td>
          <% if lecture.status == "running" %>
            <%= button_to "Join", {action: "join_lecture", params: {id: lecture.id}}, {class:"btn btn-primary"} %>
          <% else %>
            not running
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>