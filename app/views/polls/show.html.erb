
<p>
  <strong>Title:</strong>
  <%= @poll.title %>
</p>

<p>
  <strong>Is multiselect:</strong>
  <%= @poll.is_multiselect %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @poll.is_active %>
</p>

<h3>Voting Results</h3>
  <div>
    <%= react_component("PollResultApp",  {lecture_id: @lecture.id, poll_id: @poll.id, poll_option_ids: @poll.poll_options.map{|option| option.id}} ) %>
  </div>
  <% if !@poll.is_active? %>
    <p><strong>Total Number of Participants: </strong><%= Answer.where(poll_id: @poll.id).distinct.count(:student_id) %></p>
  <% end %>


<%= link_to 'Show all polls', lecture_polls_path(@lecture) %>
