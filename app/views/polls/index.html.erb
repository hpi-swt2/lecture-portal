<h1>Polls</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Is multiselect</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.lecture.name %></td>
        <td><%= poll.title %></td>
        <td><%= poll.is_multiselect %></td>
        <td><%= poll.is_active %></td>
        <td><%= link_to 'Show', course_lecture_poll_path(course_id:@lecture.course.id, lecture_id:@lecture.id, id: poll.id) %></td>
        <td><%= link_to 'Edit', edit_course_lecture_poll_path(course_id:@lecture.course.id, lecture_id:@lecture.id, id: poll.id) %></td>
<!--        <td><%#= link_to 'Destroy', [@lecture, poll], method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td><%= link_to 'Destroy', course_lecture_poll_path(course_id:@lecture.course.id, lecture_id:@lecture.id, id: poll.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

