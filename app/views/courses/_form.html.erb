<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <%= form.label :name , :class => "col" %>
    <%= form.text_field :name , :class => "col-10" %>
  </div>

  <div class="field row">
    <%= form.label :description, :class => "col" %>
    <%= form.text_field :description , :class => "col-10" %>
  </div>

  <br/>
  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
    <% if defined?(with_delete_button) && with_delete_button %>
      <%= link_to 'Delete Course', course_path(id:@course.id), method: :delete, data: { confirm: "Do you really want to delete this course?\n\nDeleted courses cannnot be restored!" }, :class => "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
